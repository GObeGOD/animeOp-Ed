            android:contentDescription="@string/contentDescriptionLevel1"
            android:onClick="handleButton"
          />
          
        <ProgressBar
            android:id="@+id/progressBar1"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/level_1"
            android:layout_below="@+id/level_1"
            android:progress="50"
            
           />

        <ImageView
            android:id="@+id/rankView1"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_below="@+id/level_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/userRank"
            />
        
