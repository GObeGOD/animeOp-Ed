<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/level_1"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level1button"
            android:contentDescription="@string/contentDescriptionLevel1"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_2"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level2button"
            android:contentDescription="@string/contentDescriptionLevel2"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_3"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level3button"
            android:contentDescription="@string/contentDescriptionLevel3"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_4"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level4button"
            android:contentDescription="@string/contentDescriptionLevel4"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_5"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level5button"
            android:contentDescription="@string/contentDescriptionLevel4"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_6"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level1button"
            android:contentDescription="@string/contentDescriptionLevel2"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_7"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level2button"
            android:contentDescription="@string/contentDescriptionLevel1"
            android:onClick="handleButton"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/level_8"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:background="@drawable/level3button"
            android:contentDescription="@string/contentDescriptionLevel1"
            android:onClick="handleButton"
            android:scaleType="fitXY" />
    </LinearLayout>

</ScrollView>